<!--pages/index.wxml-->
<view id="app">

  <!-- <button class="getClipboardData" bindtap="getClipboardData"> 粘贴</button> -->
  <view class="content">

    <textarea class="value" value="{{text}}" bindinput="textInput" maxlength="-1" placeholder="请在此处输入内容"></textarea>

    <view class="control-bar">

      <view class="voice">
        <view class="tips">
         Voice：
        </view>
        <view class="manIcon" wx:for="{{soundGenerator}}" wx:key="index" data-voiceType="{{item.voiceType}}" bindtap="changeVoice">
          <image src="{{item.active}}" wx:if="{{voiceType==item.voiceType}}"></image>
          <image src="{{item.src}}" wx:else></image>
        </view>
      </view>

      <view class="radio">
       <image wx:if="{{speech}}" src="../assets/img/Radio.gif"></image>
      </view>

      <view class="paste-delete">
        <view class="paste" bindtap="getClipboardData">
          <image src="../assets/img/paste.png"></image>
        </view>
        <view bindtap="deleteContent" class="delete">
          <image src="../assets/img/delete.png"></image>
        </view>
      </view>
    </view>

  </view>
  <view class="button" bindtap="playAudio">
    <button size="">生成语音</button>


  </view>

</view>