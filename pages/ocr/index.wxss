/* pages/ocr/index.wxss */
view#app {
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;

}
view#app image.chooseImage{
  width: 120px;
  height:80px;
  box-shadow: 0 0 300px skyblue;
  background-color: #fff;
  border-radius: 3px;
}
view#app page-container .container {
  width: 100vw;
  height: 100vh;
  position: relative;
}

view#app page-container .container icon.cancel {
  position: absolute;
  top: 5px;
  right: 5px;
  z-index: 1;
}

view#app view.ocr-container {
  width: 100vw;
  height: 85vh;
  overflow: scroll;
  font-size: 0;
}

view#app page-container .container .read-box {
  width: 100vw;
  height: 15vh;
  position: absolute;
  bottom: 0;
  left: 0;
  box-shadow: 0 0 5px rgb(211, 211, 211);
  z-index: 1;
  display: flex;
  justify-content: space-between;
}
view#app page-container .container .read-box text{
  flex:1;
  padding: 5px;
  padding-left: 10px;
}
view#app page-container .container .read-box button.read{
  width: 60px;
  height: 100%;
  background:#fff;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
view#app page-container .container .read-box button.read-hover{
  background-color: #eee;
}
view#app page-container .container .read-box button image{
  width: 50px;
  height: 50px;
  background-color:transparent;
}
view#app view.ocr-container .image-wrap {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

view#app view.ocr-container .image-wrap .text-box {
  position: absolute;
  z-index: 10;
  border: 1px solid lightcoral;
  border-radius: 1px;
 
}

view#app view.ocr-container .image-wrap .text-box.active {
  background-color: rgba(135, 232, 235, 0.3);
  border-color: red;
}